{
    "name": "YouTube Music Downloader",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "Allow users to download current YT music track.",
    "icons": {
        "128": "icons/button128.png",
        "48": "icons/button48.png",
        "32": "icons/button32.png"
    },
    "content_scripts": [
        {
            "matches": ["https://music.youtube.com/*"],
            "js": ["js/ButtonScript.js"],
            "css": ["css/style.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/*.png"],
            "matches": ["https://music.youtube.com/*"]
        }
    ]
}